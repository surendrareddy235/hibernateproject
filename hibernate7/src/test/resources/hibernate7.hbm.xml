<?xml version="1.0" encoding="UTF-8"?>
<hibernate-mapping>
    <class name="com.projects.hibernate7.Employee" table="schoolemp4">
        <id name="id">
            <generator class="increment"></generator>
        </id>
        <property name="name"></property>

        <joined-subclass name="com.projects.hibernate7.RegEmp" table="schoolreg_emp4">
            <property name="salary"></property>
            <property name="bonus"></property>
        </joined-subclass>

        <joined-subclass name="com.projects.hibernate7.PartimeEmp" table="schoolpartime_emp4">
            <property name="payAsTime"></property>
            <property name="contractDuration"></property>
        </joined-subclass>
    </class>
</hibernate-mapping>
